                            Text="{x:Static resources:AppResources.String299}" />
                        <Label Style="{StaticResource RegularSmallLabel}"
                               Text="{x:Static resources:AppResources.String300}" />
                        <Label
                            Margin="0, 16, 0, 0"
                            Style="{StaticResource BoldSmallLabel}"
                            Text="{x:Static resources:AppResources.String301}" />
                        <Label Style="{StaticResource RegularSmallLabel}"
                               Text="{x:Static resources:AppResources.String302}" />
